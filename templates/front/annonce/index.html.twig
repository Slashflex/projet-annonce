{% extends 'base.html.twig' %}

{% block title %}Vos Annonces{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-start">
            {% for a in annonces %}
            <div class="card mb-5 mx-auto" style="width: 18rem">
                <img src="{{ a.imageCouverture }}" class="card-img-top" alt="{{ a.imageCouverture }}">
                <div class="card-body">
                    <h5 class="card-title">{{ a.titre }}</h5>
                    <p class="card-text">{{ a.introduction|tronquer(10) }}</p>
                    <a href="#" class="btn btn-primary">Show</a>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}