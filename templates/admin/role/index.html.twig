{% extends 'admin/base.html.twig' %}

{% block title %}gestion des roles{% endblock %}

{% block body %}
    <a href="{{ path('admin_ajouter_role') }}" class="btn btn-primary mb-5">Ajouter un role</a>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th>Titre</th>
            <th scope="col" class="text-center">Action</th>
        </tr>
        </thead>
        <tbody>
        {% for r in roles %}
            <tr>
                <th scope="row">{{ r.id }}</th>
                <td>{{ r.titre }}</td>
                <td class="text-center">
                    <a href="{{ path('admin_editer_roles', {'id': r.id}) }}" class="mx-2" style="font-size: 24px;"><i class="fas fa-edit"></i></a>
                    <a href="#" class="mx-2" style="font-size: 24px;"><i class="fas fa-trash text-danger"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}


{% block javascripts %}
    {{ encore_entry_script_tags('images-collection') }}
{% endblock %} 