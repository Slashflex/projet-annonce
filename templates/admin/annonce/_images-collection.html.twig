{% block _annonce_images_widget %}
    <p class="mt-3">Ajouter une ou plusieurs images</p>
    {{ form_widget(form) }}
    <input type="hidden" id="widgets-counter" value="0">
    <div class="form-group mt-3">
        <button type="button" id="ajouter-image-btn" class="btn btn-primary">+ Ajouter une image</button>
    </div>
{% endblock %}


{% block _annonce_images_entry_row %}
    {{ form_widget(form) }}
{% endblock %}


{% block _annonce_images_entry_widget %}
    <div class="row justify-content-between px-3 my-3" id="block_{{ id }}">
        {{ form_widget(form.url, {'attr': {'class': 'w-40'}}) }}
        {{ form_widget(form.legende, {'attr': {'class': 'w-40'}}) }}
        <button type="button" data-action="supprimer" data-cible="#block_{{ id }}" class="btn btn-danger">X</button>
    </div>
{% endblock %}